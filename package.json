{
    "name": "swaggerlint",
    "version": "0.0.8",
    "description": "Swaggerlint  helps you to have a consistent API style by linting your swagger / OpenAPI Scheme.",
    "main": "./dist/index.js",
    "scripts": {
        "build": "rm -rf ./dist && tsc",
        "types": "tsc --noEmit",
        "lint": "eslint . --ext=.js,.ts",
        "dev": "ts-node ./src/bin.ts",
        "test": "jest",
        "preversion": "npm run test && npm run lint && npm run build",
        "postversion": "npm publish && git push --follow-tags"
    },
    "bin": {
        "swaggerlint": "./dist/bin.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/antonk52/swaggerlint.git"
    },
    "keywords": [
        "swagger",
        "openapi"
    ],
    "author": "antonk52",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/antonk52/swaggerlint/issues"
    },
    "devDependencies": {
        "@types/jest": "^26.0.4",
        "@types/js-yaml": "^3.12.5",
        "@types/mime-db": "^1.43.0",
        "@types/minimist": "^1.2.0",
        "@types/node": "^12.12.50",
        "@types/node-fetch": "^2.5.7",
        "@typescript-eslint/eslint-plugin": "^3.6.1",
        "@typescript-eslint/parser": "^3.6.1",
        "deepmerge": "^4.2.2",
        "eslint": "^7.4.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "jest": "^26.1.0",
        "prettier": "^1.19.1",
        "ts-jest": "^26.1.2",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.6"
    },
    "dependencies": {
        "case": "^1.6.3",
        "cosmiconfig": "^6.0.0",
        "js-yaml": "^3.14.0",
        "kleur": "^4.0.2",
        "lodash.get": "^4.4.2",
        "mime-db": "^1.44.0",
        "minimist": "^1.2.5",
        "node-fetch": "^2.6.0"
    }
}
